<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hugues.marchal.cheaty.selecter_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a scanning option"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:id="@+id/scrollView"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/explanationTextTV"
            android:enabled="true"
            android:textIsSelectable="true" />
    </ScrollView>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select All"
        android:id="@+id/selectAllCB"
        android:layout_marginStart="27dp"
        android:clickable="true"
        android:layout_below="@+id/scrollView"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/selectBTN" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi Networks"
        android:id="@+id/selectWifiRB"
        android:layout_below="@+id/selectAllCB"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth Network"
        android:id="@+id/selectBluetoothRB"
        android:layout_below="@+id/selectWifiRB"
        android:layout_alignStart="@+id/selectWifiRB"
        android:clickable="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Network"
        android:id="@+id/selectMobileRB"
        android:layout_below="@+id/selectBluetoothRB"
        android:layout_alignStart="@+id/selectBluetoothRB"
        android:clickable="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Select"
        android:id="@+id/selectBTN"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true" />


</RelativeLayout>
